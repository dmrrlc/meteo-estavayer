{
  "manifest_version": 3,
  "name": "Météo Estavayer",
  "version": "1.0",
  "description": "Affiche la vitesse du vent et les données météo d'Estavayer",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://meteo.cvestavayer.ch/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}